<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DistanceFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/textViewSelected"
        android:layout_width="323dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="48dp"
        android:text="How far do you want to walk?"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="235dp"
        android:layout_height="214dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/map"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewSelected" />

    <com.warkiz.widget.IndicatorSeekBar
        android:id="@+id/distSlider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:isb_indicator_color="@color/Black"
        app:isb_indicator_text_color="@color/White"
        app:isb_indicator_text_size="24sp"
        app:isb_max="10000"
        app:isb_min="0.0"
        app:isb_only_thumb_draggable="false"
        app:isb_progress="2500"
        app:isb_seek_smoothly="true"
        app:isb_show_indicator="rounded_rectangle"
        app:isb_show_tick_marks_type="oval"
        app:isb_show_tick_texts="true"
        app:isb_thumb_color="@color/Black"
        app:isb_thumb_size="28dp"
        app:isb_tick_marks_color="@color/LightSeaGreen"
        app:isb_tick_marks_size="15dp"
        app:isb_tick_texts_color="@color/Blue"
        app:isb_tick_texts_size="22sp"
        app:isb_ticks_count="5"
        app:isb_track_background_color="@color/DarkGray"
        app:isb_track_background_size="2dp"
        app:isb_track_progress_color="@color/Blue"
        app:isb_track_progress_size="7dp"
        app:layout_constraintBottom_toTopOf="@+id/btnDistanceNext"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <android.support.design.button.MaterialButton
        android:id="@+id/btnDistanceNext"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="180dp"
        android:layout_height="70dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        android:text="Next"
        android:textAllCaps="false"
        android:textSize="24sp"
        app:cornerRadius="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />
</android.support.constraint.ConstraintLayout>